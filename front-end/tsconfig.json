{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@core/*": ["./core/*"],
      "@common/*": ["./common/*"],
      "@services/*": ["./common/services/*"],
      "@hooks/*": ["./common/hooks/*"],
      "@models/*": ["./common/models/*"],
      "@module/community/*": ["./modules/community/*"],
      "@module/cookbook/*": ["./modules/cookbook/*"],
      "@module/home/*": ["./modules/home/*"],
      "@module/medications/*": ["./modules/medications/*"],
      "@module/router/*": ["./modules/router/*"],
      "@icons/*": ["./assets/icons/uicons-regular-rounded/svg/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
